layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        children
        pane size=2 borderless=true {
            plugin location="zellij:status-bar"
        }
    }

    tab name="AI-Dev" focus=true {
        pane split_direction="vertical" {
            pane size="60%" {
                name "editor"
                command "nvim"
                args "."
            }
            pane split_direction="horizontal" {
                pane size="70%" {
                    name "aider"
                    command "bash"
                    args "-c" "./safe_aider.sh --quality || aider --model ollama/qwen2.5:3b --editor-model ollama/qwen2.5-coder:0.5b-instruct --no-auto-commits --gitignore --map-tokens 512"
                }
                pane size="30%" {
                    name "quick-terminal"
                }
            }
        }
    }

    tab name="Claude-Code" {
        pane split_direction="vertical" {
            pane size="80%" {
                name "claude-ready"
                command "bash"
                args "-c" "echo 'ðŸ¤– Claude Code Ready!' && echo 'ðŸ“ Working directory: '$(pwd) && echo '' && echo 'ðŸ’¡ To launch Claude Code:' && echo '   code .' && echo '' && echo 'ðŸ”§ Or use QRY command:' && echo '   qry claude' && echo '' && bash"
            }
            pane size="20%" {
                name "claude-terminal"
                command "bash"
                args "-c" "echo 'ðŸ“ Directory: '$(pwd) && echo 'Claude Code companion terminal' && bash"
            }
        }
    }

    tab name="QRY-Tools" {
        pane split_direction="horizontal" {
            pane size="50%" {
                name "uroboro"
                command "bash"
                args "-c" "echo 'ðŸ—„ï¸  QRY Uroboro Console - Ready for captures and publishing' && echo 'ðŸ“ Directory: '$(pwd) && bash"
            }
            pane size="50%" split_direction="vertical" {
                pane size="60%" {
                    name "osmotic"
                    command "bash"
                    args "-c" "echo 'ðŸ” Osmotic Search - Future conversational interface' && echo 'ðŸ“ Directory: '$(pwd) && bash"
                }
                pane size="40%" {
                    name "system-monitor"
                    command "bash"
                    args "-c" "echo 'âš¡ System Monitor - Watch AI model performance' && echo 'ðŸ“ Directory: '$(pwd) && bash"
                }
            }
        }
    }

    tab name="Performance" {
        pane split_direction="vertical" {
            pane size="50%" {
                name "htop"
                command "htop"
            }
            pane size="50%" split_direction="horizontal" {
                pane size="50%" {
                    name "ollama-status"
                    command "bash"
                    args "-c" "watch -n 2 'ollama list && echo && ollama ps'"
                }
                pane size="50%" {
                    name "gpu-monitor"
                    command "bash"
                    args "-c" "if command -v nvidia-smi >/dev/null 2>&1; then watch -n 1 nvidia-smi; else echo 'No GPU monitoring available' && bash; fi"
                }
            }
        }
    }
}
